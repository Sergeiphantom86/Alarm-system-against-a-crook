using System.Collections;
using UnityEngine;

[RequireComponent(typeof(AudioSource))]

public class Alarm : MonoBehaviour
{
    private AudioSource _audioSource;
    private Coroutine _coroutine;
    private float _targetVolume;

    private void Start()
    {
        _audioSource = GetComponent<AudioSource>();
    }

    public void Turn(float maxVolume = 1)
    {
        if (_audioSource.isPlaying == false)
        {
            _audioSource.Play();
        }

        _targetVolume = maxVolume;

        _coroutine = StartCoroutine(SetTargetVolumeReverseValue(maxVolume));
    }

    public void ChangeTarget()
    {
        _targetVolume = 0;

        if(_coroutine == null)
        {
            StartCoroutine(SetTargetVolumeReverseValue(_targetVolume));
        }
    }

    private IEnumerator SetTargetVolumeReverseValue(float maxVolume)
    {
        float delay = 0.1f;
        float stepUpVolume = 0.01f;

        WaitForSeconds wait = new(delay);

        float startPosition = stepUpVolume;

        while (startPosition > 0 && startPosition < 1)
        {
            _audioSource.volume = startPosition;

            startPosition = Mathf.MoveTowards(startPosition, _targetVolume, stepUpVolume);
           
            yield return wait;
        }

        if (_audioSource.volume <= 0)
        {
            _audioSource?.Stop();
        }
    }
}
